                android:id="@+id/sydney"
                layout="@layout/format"
                android:layout_width="match_parent"
                android:layout_height="259dp"
                android:scaleType="fitEnd" />

            <include
                android:id="@+id/ny"
                layout="@layout/format"
                android:layout_width="match_parent"
                android:layout_height="259dp"
                android:scaleType="fitEnd" />

            <include
                android:id="@+id/bangkok"
                layout="@layout/format"
                android:layout_width="match_parent"
                android:layout_height="259dp"
                android:scaleType="fitEnd" />
        </LinearLayout>
