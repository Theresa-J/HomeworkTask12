                android:layout_height="259dp"
                android:scaleType="fitEnd" />

            <include
                android:id="@+id/jakarta"
                layout="@layout/format"
                android:layout_width="match_parent"
                android:layout_height="259dp"
                android:scaleType="fitEnd" />

